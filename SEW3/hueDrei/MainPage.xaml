<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="hueDrei.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

           
            <Label Text="Erstellen von einem Herbarium!"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
            
               Margin="0,20,0,10" />

            
            <Label Text="Bitte wählen Sie die benötigten Dateien und Ordner aus:"
               FontSize="16"
               HorizontalOptions="Center"
               
               TextColor="Gray"
               Margin="0,0,0,20" />

           
            <Button
            Text="Ordner wählen zum Speichern des Herbariums"
            x:Name="bOutputPicker"
            Clicked="bOutputPicker_Clicked" />

            <Button
            Text="PowerPoint-Template auswählen"
            x:Name="bTemplatePicker"
            Clicked="bTemplatePicker_Clicked" />

            <Button
            Text="Textdokument mit Meta-Daten auswählen"
            x:Name="bMetaDataPicker"
            Clicked="bMetaDataPicker_Clicked" />

            <Button
            Text="Ordner mit Pflanzenbildern auswählen"
            x:Name="bImagesPicker"
            Clicked="bImagesPicker_Clicked" />

            <Button
                Text="Erstellen des Herbariums:"
                x:Name="bCreateHerbarium"
                Clicked="bCreateHerbarium_Clicked" />

        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
